---
import BaseLayout from "./BaseLayout.astro";
// frontmatter es la forma en la que conectamos los datos de mi .md con la plantilla
// solo se conectan los datos que estan escritos en formato YAML(los que esten dentro de ---  ---)
const { frontmatter } = Astro.props;

---

<BaseLayout pageTitle={frontmatter.title}>
    <p>Escrito por {frontmatter.author}</p>
    <p>Publicado el: {frontmatter.pubDate.slice(0, 10)}</p>
    <img
        src={frontmatter.image.url}
        width="300px"
        alt={frontmatter.image.alt}
    />
    <div class="tags">
        {
            frontmatter.tags.map((tag: string) => (
                <p class="tag">
                    <a href={`/tags/${tag}`}>{tag}</a>
                </p>
            ))
        }
    </div>
    <slot />
</BaseLayout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>